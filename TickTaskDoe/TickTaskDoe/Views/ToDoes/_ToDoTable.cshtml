@model IEnumerable<TickTaskDoe.Models.ToDoTask>

<style>
    #EditDeleteLinks{
        text-align: center;
    }
    #TaskEdit{
        color: darkblue !important;
        font-size: 20px;
        font-weight: bolder;
        background-color: #e6e6e6;
        padding: 5px;
        border-radius: 5px;
        margin-right: 5px;
    }

    #TaskDelete{
        color: darkred !important;
        font-size: 20px;
        font-weight: bolder;
        background-color: #e6e6e6;
        padding: 5px;
        border-radius: 5px;
        margin-left: 5px;
    }
</style>

<h3>@ViewBag.ListName Tasks</h3>
@if (ViewBag.percentComplete >= 0)
{
    <div id="progressToDo">
        <br/>
        <div class="progress">
            <div class="progress-bar" role="progressbar"
                style="width:@(Html.AttributeEncode(ViewBag.percentComplete))%">
            </div>
        </div>
            <p>@(ViewBag.percentComplete)% Complete</p>
    </div>
}

<table class="table">
    <tr>
        <!--<th>
            @Html.DisplayNameFor(model => model.Desc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Done)
        </th>
        <th>Task Description</th>
        <th>Is Done?</th-->
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (!item.Done)
                {
                    @Html.DisplayFor(modelItem => item.Desc)
                }
                else
                {
                    <div class="strikeThrough">@Html.DisplayFor(modelItem => item.Desc)</div>
                }
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.Done,new { id = item.Id, @class="ActiveCheck"})
            </td>
            <td id="EditDeleteLinks">
                <a class="glyphicon glyphicon-pencil" id="TaskEdit" title="Edit" onclick=PopupEdit()></a>
                <a class="glyphicon glyphicon-remove" id="TaskDelete" title="Delete" onclick=PopupDelete()></a>
            </td>
        </tr>
    }
</table>

<script src="~/CustomUnits/DoneEventListener.js"></script>