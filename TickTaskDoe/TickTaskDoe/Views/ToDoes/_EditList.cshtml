@model TickTaskDoe.Models.ToDoList

@using (Html.BeginForm("EditList", "ToDoes", FormMethod.Post, new { @class = "editForm" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal editForm">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group EditDesc">
            @Html.LabelFor(model => model.Desc,"Description",htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8 col-xs-offset-3">
                @Html.EditorFor(model => model.Desc, new { htmlAttributes = new { @class = "form-control", @placeholder = "List Description"} })
                @Html.ValidationMessageFor(model => model.Desc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-4 col-md-4 col-xs-offset-4 col-md-offset-4">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
